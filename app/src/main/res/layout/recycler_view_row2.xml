<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/background_color"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image"
            android:layout_width="115dp"
            android:layout_height="140dp"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:text="Title"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:text="Description"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/cameraIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/image"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/cameraText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/cameraIcon"
            android:text="TextView"
            android:textColor="@color/text_color" />

        <ImageView
            android:id="@+id/resolutionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cameraIcon"
            android:layout_toEndOf="@id/image"
            app:srcCompat="@android:drawable/ic_menu_view" />

        <TextView
            android:id="@+id/resolutionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cameraText"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/resolutionIcon"
            android:text="TextView"
            android:textColor="@color/text_color" />

        <ImageView
            android:id="@+id/storageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/cameraText"
            app:srcCompat="@android:drawable/ic_menu_save" />

        <TextView
            android:id="@+id/storageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/storageIcon"
            android:text="TextView"
            android:textColor="@color/text_color" />

        <ImageView
            android:id="@+id/osIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/storageText"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/cameraText"
            app:srcCompat="@android:drawable/ic_menu_manage" />

        <TextView
            android:id="@+id/osText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/storageText"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/osIcon"
            android:text="TextView"
            android:textColor="@color/text_color" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>